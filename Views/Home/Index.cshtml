<input type="button" id="more" value="+" hidden>


<h2>Connect</h2>
@using (Html.BeginForm(FormMethod.Post))
{

    @Html.Label("Login") @Html.TextBox("loginValue") @Html.Label("Pass") @Html.TextBox("passValue")
    <input type="submit" name="userLogin" value="userLogin" />
}



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#pic").hover(function () {
            $("#more").show();
        },
            function () {
                $("#more").hide();
            });
    });
</script>