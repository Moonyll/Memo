@model Memo.Models.Identify
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var msg = @ViewBag.Error;

}

@using (Html.BeginForm(FormMethod.Post))
{
    <p>
        Mini calculator : @Html.Label("1st nb = ") @Html.TextBox("x") @Html.Label("2nd nb = ") @Html.TextBox("y")
        <input type="submit" name="op" value="+" /> @* + Additionner *@
        <input type="submit" name="op" value="-" /> @* - Soustraire *@
        <input type="submit" name="op" value="*" /> @* * Multiplier *@
        <input type="submit" name="op" value="/" /> @* / Diviser *@
    </p>
    <p>
        @Html.ValidationMessage("x", new { @class = "text-danger" }) @Html.ValidationMessage("y", new { @class = "text-danger" }) @* Erreur de saisie *@
    </p>
}
<p>Résultat : @ViewBag.result</p>
