<!--<!DOCTYPE html> = Instruction to the web browser about what version of HTML: current version is HTML5.-->
<!DOCTYPE html>
<html>
<head>
    
    <!--Encoding type for HTML page as "Universal Character Set Transformation Format - 8 bits" :-->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />

    <!--Settings for adaptative design & zoom level :-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--Load CSS for FontAwesome Icons :-->

    <title>@ViewBag.Title - Modells</title>

    <!--Load the CSS bundles styles :-->
    @Styles.Render("~/Content/css")

    <!--Load the modernizr / jquery / popper bundles scripts.-->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
 
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</head>
<body>
    <!--Header :-->
    <header class="bg-transparent border border-dark">
        Header For Modells
    </header>

    <!--Navigation Bar :-->
    <nav class="bg-transparent border border-dark">
        
       

        <div class="btn-group p-1 logobrand float-right" role="group">
            <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("pictureHome", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Accueil">
               
            </button>

            <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("pictureCollection", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Collection">
               
            </button>

            <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("pictureCreate", "Pictures")'" data-toggle="tooltip" data-placement="bottom" title="Ajouter image">
              
            </button>
        </div>
    </nav>

    <!--Main Content :-->
    <main class="bg-success">
        @RenderBody()
    </main>

    <!--Footer :-->
    <footer class="bg-transparent border border-dark">
        &copy; @DateTime.Now.Year - Modells
    </footer>

</body>
</html>